@{
    ViewBag.ParentId = ViewData["ParentId"];
    ViewBag.SendEmailCaption = ViewData["SendEmailCaption"];
    ViewBag.ReturnUrl = ViewData["ReturnUrl"];
    
}

<a href="@Url.Action( "SelectEmailRecipients",null, new { @ParentId = @ViewBag.ParentId, @ReturnUrl = @ViewBag.ReturnUrl })"
   class="btn btn-primary" data-target="#emailItemModal" data-qpse-emaillink='true'>
    <i class="fa fa-envelope animated rubberBand bounce"></i>&nbsp;@ViewBag.SendEmailCaption&nbsp;<i class="fa fa-angle-double-right"></i>
</a>
